<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wuqilong.sudoku_game">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SuDoKu_main_Activity"
            android:screenOrientation="portrait"> <!-- 屏幕方向鎖死 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SuDoKu_setting_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Solution_operation_Activity"
            android:screenOrientation="portrait" />
        <activity android:name=".Sudoku_Choose_Activity" />
        <activity android:name=".SudokuPlayingActivity" />
        <activity android:name=".Sudoku_Pass_Activity"></activity>
    </application>

</manifest>