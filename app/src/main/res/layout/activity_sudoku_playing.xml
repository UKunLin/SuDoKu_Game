<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SudokuPlayingActivity">

    <TextView
        android:id="@+id/show_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="00:00:00"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/Choose_Layout"
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_time_tv">

    </FrameLayout>

    <Button
        android:id="@+id/SOA_num9_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/SOA_num7_BT"
        app:layout_constraintTop_toBottomOf="@+id/Choose_Layout" />

    <Button
        android:id="@+id/SOA_num7_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/SOA_num5_BT"
        app:layout_constraintTop_toBottomOf="@+id/Choose_Layout" />

    <Button
        android:id="@+id/SOA_num5_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/SOA_num3_BT"
        app:layout_constraintTop_toBottomOf="@+id/Choose_Layout" />

    <Button
        android:id="@+id/SOA_num3_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/SOA_num1_BT"
        app:layout_constraintTop_toBottomOf="@+id/Choose_Layout" />

    <Button
        android:id="@+id/SOA_num1_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Choose_Layout" />

    <Button
        android:id="@+id/SOA_num2_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="76dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Choose_Layout" />

    <Button
        android:id="@+id/SOA_num4_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/SOA_num2_BT"
        app:layout_constraintTop_toBottomOf="@+id/Choose_Layout" />

    <Button
        android:id="@+id/SOA_num6_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/SOA_num4_BT"
        app:layout_constraintTop_toBottomOf="@+id/Choose_Layout" />

    <Button
        android:id="@+id/SOA_num8_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/SOA_num6_BT"
        app:layout_constraintTop_toBottomOf="@+id/Choose_Layout" />

    <Button
        android:id="@+id/SOA_return_BT"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="8dp"
        android:text="返回主畫面"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SOA_num6_BT" />

    <Button
        android:id="@+id/SOA_clear_BT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="清除"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SOA_num4_BT" />

    <Button
        android:id="@+id/SOA_clearall_BT"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="重置"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/SOA_return_BT"
        app:layout_constraintStart_toEndOf="@+id/SOA_clear_BT"
        app:layout_constraintTop_toBottomOf="@+id/SOA_num4_BT" />


</android.support.constraint.ConstraintLayout>